<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Wordle</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Wordle.styles.css" asp-append-version="true" />
    <style>
      

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm mb-3 navbar-collapse">
  <div class="container-fluid">
    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
      <ul class="navbar-nav flex-grow-1 mr-auto navbar-nav-scroll">
        <!-- menu items -->
      </ul>
    </div>
    <partial name="_LoginPartial"/>
  </div>
</nav>


    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>

        <div>
                <p>&copy; 2023 Wordle. Wszystkie prawa zastrzeżone.</p>
        <nav>    
            <ul>
                    <li><a href=" @Url.Action("Privacy")">Polityka prywatności</a></li>
                    <li><a href=" @Url.Action("Terms")">Regulamin</a></li>
                    <li><a href=" @Url.Action("Contact")">Kontakt</a></li>
            </ul>
        </nav>
    </div>
</footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
