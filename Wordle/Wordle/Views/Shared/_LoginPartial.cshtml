@using Microsoft.AspNetCore.Identity
@using Wordle.Areas.Identity.Data

@inject SignInManager<WordleUser> SignInManager
@inject UserManager<WordleUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">

        <span id="manage" class="nav-link" asp-area="Identity"  title="Manage"> </span>
    </li>
        <li class="nav-item">
            <a  class="nav-link" asp-area="Identity" asp-page="/Account/Stats" title="Stats">Statystyki</a>
        </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link">Wyloguj</button>
        </form>
    </li>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
                  <script>

                        $.ajax({
        type: "GET",
        url: "/Home/GetUserNickname", // Zaktualizuj URL zgodnie z właściwym kontrolerem i akcją
        success: function (response) {
            // Kod wykonywany po pomyślnym zakończeniu żądania
            console.log(response);
                document.getElementById("manage").innerHTML += "Witaj "+response+"!";

        },
        error: function (error) {
                alert("Wystąpił błąd:");
        }
    });

    </script>

}
else
{
    <!--
            <li class="nav-item">
            <a class="nav-link text-light" id="register" asp-area="Identity" asp-page="/Account/Register">Rejestracja</a>
        </li>

    -->
    <li class="nav-item">
        <a class="nav-link" id="login" asp-area="Identity" asp-page="/Account/Login">Logowanie</a>
    </li>
}
</ul>
